#!/bin/bash

set -e # Exit immediately if a command exits with a non-zero status.
set -u # Treat unset variables as an error.

source /opt/ai-dock/etc/environment.sh

echo "-geometry ${DISPLAY_SIZEW}x${DISPLAY_SIZEH}"
echo "-depth ${DISPLAY_CDEPTH}"
echo "-auth ~/.vnc/passwd"
echo "-x509key /opt/caddy/tls/container.key"
echo "-x509cert /opt/caddy/tls/container.crt"
echo "-vgl"